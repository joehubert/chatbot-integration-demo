    <!-- Widget Configuration -->
    <script>
        window.ChatbotConfig = {
            apiEndpoint: '<%= process.env.BASE_URL || 'http://localhost:3000' %>/api/chat',
                theme: 'warm-orange',
            position: 'bottom-right',
            greeting: 'Hi! Looking for help with your order or need product recommendations?',
            orgId: '<%= process.env.DEFAULT_ORG_ID || 'demo- org' %>',
                autoOpen: false,
                    showTyping: true,
                        companyName: '<%= process.env.ECOMMERCE_DEMO_NAME || 'TechShop Online' %>',
                            primaryColor: '#e74c3c',
                                logo: '<%= process.env.ECOMMERCE_DEMO_LOGO || ' / images / logos / techshop.png' %>',
                                    // E-commerce specific context
                                    context: 'ecommerce-website',
                                        availableActions: [
                                            'Product Information',
                                            'Order Status',
                                            'Shipping & Returns',
                                            'Technical Support',
                                            'Product Recommendations'
                                        ]
        };

        // E-commerce functionality
        let cartCount = 3;

        function handleSearch() {
            const searchTerm = document.getElementById('search-input').value;
            if (searchTerm.trim()) {
                console.log('Searching for:', searchTerm);

                // Open chatbot for product search help
                if (window.ChatbotWidget) {
                    window.ChatbotWidget.open();
                    setTimeout(() => {
                        window.ChatbotWidget.sendMessage(`I'm looking for "${searchTerm}". Can you help me find the best options?`);
                    }, 500);
                }
            }
        }

        function handleCategoryClick(category) {
            console.log('Category clicked:', category);

            // Open chatbot for category assistance
            if (window.ChatbotWidget) {
                window.ChatbotWidget.open();
                setTimeout(() => {
                    window.ChatbotWidget.sendMessage(`I'm interested in ${category}. What are your best recommendations?`);
                }, 500);
            }
        }

        function handleProductClick(productId) {
            console.log('Product clicked:', productId);

            // Simulate product page interaction
            const productNames = {
                'smartphone-pro': 'Smartphone Pro Max 128GB',
                'laptop-gaming': 'Gaming Laptop RTX 4070',
                'headphones-wireless': 'Wireless Noise-Canceling Headphones',
                'gaming-console': 'Gaming Console + 2 Controllers',
                'tablet-pro': 'Tablet Pro 11" 256GB with Pen',
                'smartwatch': 'Smartwatch Series 9 GPS + Cellular'
            };

            const productName = productNames[productId] || 'Product';

            if (window.ChatbotWidget) {
                window.ChatbotWidget.open();
                setTimeout(() => {
                    window.ChatbotWidget.sendMessage(`I'm interested in the ${productName}. Can you tell me more about its features and specifications?`);
                }, 500);
            }
        }

        function addToCart(event, productId) {
            event.stopPropagation(); // Prevent product click

            cartCount++;
            document.getElementById('cart-count').textContent = cartCount;

            // Show success message and offer assistance
            const productNames = {
                'smartphone-pro': 'Smartphone Pro Max',
                'laptop-gaming': 'Gaming Laptop',
                'headphones-wireless': 'Wireless Headphones',
                'gaming-console': 'Gaming Console Bundle',
                'tablet-pro': 'Tablet Pro',
                'smartwatch': 'Smartwatch Series 9'
            };

            const productName = productNames[productId] || 'Product';

            // Animate cart badge
            const cartBadge = document.getElementById('cart-count');
            cartBadge.style.transform = 'scale(1.3)';
            setTimeout(() => {
                cartBadge.style.transform = 'scale(1)';
            }, 200);

            console.log(`Added ${productName} to cart`);

            // Offer chatbot assistance
            setTimeout(() => {
                if (window.ChatbotWidget) {
                    window.ChatbotWidget.sendMessage(`Great choice! I added ${productName} to your cart. Would you like help with checkout or product recommendations?`);
                }
            }, 1000);
        }

        function handleNewsletterSignup(event) {
            event.preventDefault();
            const email = event.target.querySelector('input[type="email"]').value;

            console.log('Newsletter signup:', email);
            alert('Thank you for subscribing! You\'ll receive the latest deals and updates.');

            // Reset form
            event.target.reset();

            // Offer chatbot assistance
            if (window.ChatbotWidget) {
                setTimeout(() => {
                    window.ChatbotWidget.open();
                    window.ChatbotWidget.sendMessage('Thanks for subscribing! Is there anything specific you\'re looking to buy today?');
                }, 1500);
            }
        }

        // Search functionality
        document.getElementById('search-input').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                handleSearch();
            }
        });

        // Add some interactive demo features
        document.addEventListener('DOMContentLoaded', function () {
            // Simulate "live" features
            console.log('üõí E-commerce Demo Site Loaded');
            console.log('üí¨ Chatbot widget integrated for customer support');
            console.log('üõçÔ∏è Try searching, clicking products, or adding to cart');

            // Add click handlers for header actions
            document.querySelectorAll('.header-action').forEach(action => {
                action.addEventListener('click', function (e) {
                    e.preventDefault();
                    const actionType = this.querySelector('span:last-child').textContent;

                    if (window.ChatbotWidget) {
                        window.ChatbotWidget.open();
                        setTimeout(() => {
                            let message = '';
                            switch (actionType) {
                                case 'Account':
                                    message = 'I need help with my account. Can you assist me?';
                                    break;
                                case 'Wishlist':
                                    message = 'How do I manage my wishlist items?';
                                    break;
                                case 'Cart':
                                    message = 'I have questions about items in my cart. Can you help?';
                                    break;
                                default:
                                    message = 'I need assistance with my account.';
                            }
                            window.ChatbotWidget.sendMessage(message);
                        }, 500);
                    }
                });
            });

            // Add smooth scrolling
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });

            // Simulate real-time cart updates
            setInterval(() => {
                // Randomly show "other customers" activity (demo feature)
                if (Math.random() < 0.1) { // 10% chance every interval
                    console.log('üîî Demo: Another customer made a purchase');
                }
            }, 30000); // Every 30 seconds
        });

        // Add some e-commerce specific chat triggers
        setTimeout(() => {
            // Simulate abandoned cart reminder
            if (cartCount > 0 && Math.random() < 0.3) {
                setTimeout(() => {
                    if (window.ChatbotWidget && !window.ChatbotWidget.isOpen()) {
                        window.ChatbotWidget.open();
                        window.ChatbotWidget.sendMessage('I noticed you have items in your cart. Need help with checkout or have questions about shipping?');
                    }
                }, 10000); // After 10 seconds
            }
        }, 5000);
    </script>

    <!-- Load Chatbot Widget -->
    <script src="<%= process.env.BASE_URL || 'http://localhost:3000' %>/widget/chatbot-widget.js"></script>
</body>

</html>